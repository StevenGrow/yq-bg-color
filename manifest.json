{
  "manifest_version": 3,
  "name": "Yuque Background Color Customizer",
  "version": "1.0",
  "description": "Customize the background color of Yuque pages.",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "48": "icons/android-chrome-192x192.png",
    "128": "icons/android-chrome-192x192.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.yuque.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Set Background Color",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "48": "icons/android-chrome-192x192.png",
      "128": "icons/android-chrome-192x192.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.yuque.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}